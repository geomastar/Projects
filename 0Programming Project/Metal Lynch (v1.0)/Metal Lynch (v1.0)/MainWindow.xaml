<Window x:Class="Metal_Lynch__v1._0_.MainWindow" x:Name="gameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metal_Lynch__v1._0_"
        mc:Ignorable="d"
        Title="gameWindow" Height="600" Width="800" MaxHeight="600" MinHeight="600" MaxWidth="800" MinWidth="800"> 
    <!--The above code gives the Window a name and title of 'gameWindow', and
        gives it a height of 600 and a width of 800.-->

    <Grid x:Name="gameGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>
        <!--This code defines the rows of the grid that will seperate the gameplay
            from the GUI.-->
        <Canvas x:Name="gameCanvas" Grid.Row="0">
            <!--Defines the Canvas for the gameplay and assigns it to the first row-->
        </Canvas>
        <Canvas x:Name="GUICanvas" Grid.Row="1">
            <!--Defines the Canvas for the GUI and assigns it to the second row-->
        </Canvas>
    </Grid>
</Window>
