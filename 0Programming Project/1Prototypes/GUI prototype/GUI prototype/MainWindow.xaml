<Window x:Class="GUI_prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_prototype"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid Height="650" Width="800" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Name="gameplay_Row" Height="450"/>
            <RowDefinition Name="GUI_Row" Height="200"/>
        </Grid.RowDefinitions>
        <Canvas Name="gameplay_Canvas" Grid.Row="0">
            <TextBlock Name="gameplay_Text" FontSize="50" Canvas.Left="200" Canvas.Top="140">
                GAMEPLAY
            </TextBlock>
        </Canvas>
        <Canvas Name="GUI_Canvas" Grid.Row="1">
            <Button x:Name="fireButton" Content="Fire" Canvas.Left="571" Canvas.Top="42" Width="128" Height="58" FontSize="40" FontWeight="Bold"></Button>
            <TextBox x:Name="messageBox" Canvas.Left="10" Canvas.Top="10" FontSize="25" Width="253" Height="67" VerticalScrollBarVisibility="Hidden" TextWrapping="Wrap" IsReadOnly="True">fghf</TextBox>
            <TextBox Canvas.Left="428" Canvas.Top="140"></TextBox>
        </Canvas>
    </Grid>
</Window>
